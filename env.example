# PreStake MVP Environment Configuration
# Copy this file to .env.local and fill in your values

# Base Network Configuration
NEXT_PUBLIC_BASE_RPC=https://sepolia.base.org
NEXT_PUBLIC_BASE_CHAIN_ID=84532

# Base Mainnet (for production)
# NEXT_PUBLIC_BASE_RPC=https://mainnet.base.org
# NEXT_PUBLIC_BASE_CHAIN_ID=8453

# Smart Contract Deployment
# Your private key for contract deployment (keep this secure!)
PRIVATE_KEY=your_private_key_here

# API Keys for contract verification
# Use Etherscan API key (recommended) or BaseScan API key
ETHERSCAN_API_KEY=your_etherscan_api_key_here
# BASESCAN_API_KEY=your_basescan_api_key_here

# iExec DataProtector Configuration
IEXEC_API_URL=https://v7.bellecour.iex.ec/api

# OnchainKit Configuration (optional)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Application Configuration
NEXT_PUBLIC_PROJECT_NAME=PreStake
NEXT_PUBLIC_URL=http://localhost:3000

# Vercel Deployment (for production)
# NEXT_PUBLIC_URL=https://your-app.vercel.app

# GitHub Actions CI/CD (for production)
# VERCEL_TOKEN=your_vercel_token
# VERCEL_ORG_ID=your_vercel_org_id
# VERCEL_PROJECT_ID=your_vercel_project_id
